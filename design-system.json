{
  "designSystem": {
    "name": "Dark Social",
    "version": "1.0",
    "description": "A sleek, high-contrast dark interface inspired by modern social media platforms. Emphasizes content readability, visual hierarchy through color and weight, and a premium night-mode aesthetic.",

    "philosophy": {
      "principles": [
        "True black backgrounds for OLED optimization and visual impact",
        "Blue accent color draws attention to interactive elements",
        "High contrast text for excellent readability in dark mode",
        "Icon-driven navigation for instant recognition",
        "Card-based content separation with subtle borders"
      ],
      "mood": ["modern", "sleek", "premium", "focused", "professional"],
      "inspiration": ["twitter/x", "social platforms", "dark mode apps"]
    },

    "colors": {
      "background": {
        "primary": "#000000",
        "secondary": "#16181C",
        "tertiary": "#1D1F23",
        "elevated": "#202327",
        "hover": "rgba(255, 255, 255, 0.03)"
      },
      "text": {
        "primary": "#E7E9EA",
        "secondary": "#71767B",
        "muted": "#536471",
        "faint": "#424549"
      },
      "accent": {
        "primary": "#1D9BF0",
        "hover": "#1A8CD8",
        "subtle": "rgba(29, 155, 240, 0.1)"
      },
      "semantic": {
        "success": "#00BA7C",
        "warning": "#FFAD1F",
        "error": "#F4212E",
        "like": "#F91880"
      },
      "borders": {
        "default": "#2F3336",
        "subtle": "#1D1F23",
        "strong": "#3E4144"
      }
    },

    "typography": {
      "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
      "monoFamily": "'JetBrains Mono', 'SF Mono', monospace",
      "scale": {
        "display": { "size": "31px", "weight": "800" },
        "h1": { "size": "23px", "weight": "700" },
        "h2": { "size": "20px", "weight": "700" },
        "body": { "size": "15px", "weight": "400" },
        "small": { "size": "13px", "weight": "400" }
      }
    },

    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "32px"
    },

    "borderRadius": {
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "xl": "16px",
      "full": "9999px"
    },

    "components": {
      "button": {
        "primary": {
          "background": "#E7E9EA",
          "color": "#0F1419",
          "borderRadius": "9999px"
        },
        "accent": {
          "background": "#1D9BF0",
          "color": "#FFFFFF",
          "borderRadius": "9999px"
        }
      },
      "card": {
        "background": "transparent",
        "borderBottom": "1px solid #2F3336",
        "hoverBackground": "rgba(255, 255, 255, 0.03)"
      },
      "input": {
        "background": "#202327",
        "border": "1px solid #2F3336",
        "borderRadius": "9999px",
        "focusBorder": "#1D9BF0"
      }
    }
  }
}
